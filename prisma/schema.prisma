datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique

  todoItems       TodoItem[]
  reminderSetting ReminderSetting?
}

model TodoItem {
  id          Int      @id @default(autoincrement())
  content     String
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  scheduleFor String
  priority    Priority
  category    Category

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model ReminderSetting {
  id            Int      @id @default(autoincrement())
  active        Boolean  @default(false)
  morningTime   DateTime @db.Timetz
  afternoonTime DateTime @db.Timetz

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

enum Priority {
  LOW
  NORMAL
  HIGH
}

enum Category {
  WORK
  PRIVATE
}
