datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String?
  email    String  @unique

  todoItems       TodoItem[]
  reminderSetting ReminderSetting?
  tokens          Token[]
}

model Token {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAp  DateTime  @updatedAt
  type       TokenType
  emailToken String?   @unique
  valid      Boolean   @default(true)
  expiration DateTime

  userId Int
  user   User @relation(fields: [userId], references: [id])

}

model TodoItem {
  id          Int      @id @default(autoincrement())
  content     String
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  scheduleFor String
  priority    Priority
  category    Category

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model ReminderSetting {
  id            Int     @id @default(autoincrement())
  active        Boolean @default(false)
  morningTime   String
  afternoonTime String

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

enum Priority {
  LOW
  NORMAL
  HIGH
}

enum Category {
  WORK
  PRIVATE
}

enum TokenType {
  EMAIL
  API
}
